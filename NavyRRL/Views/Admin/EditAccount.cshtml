@model NavyRRL.Models.AccountViewModel


<div class="modal fade" tabindex="-1" data-keyboard="false" data-backdrop="static">
	<style>
		.dropdown-menu { padding: 5px 5px; }
	</style>
	<div class="modal-dialog modal-lg" style="width: 800px">
		@using ( Html.BeginForm( "EditAccount", "Admin", FormMethod.Post, new { id = "EditAccount", @class = "modal-content", style = "height: 500px;" } ) )
		{
			@Html.AntiForgeryToken()
			@Html.HiddenFor( x => x.UserId )
			@Html.ValidationSummary( "", new { @class = "text-danger" } )
			<div class="modal-header" style="padding: 5px 15px !important;">
				<button type="button" class="close" data-dissmiss="modal">&times;</button>
				<h4>Edit Account</h4>
			</div>
			<div class="modal-body" style="height: 350px;">
				<div class="form-horizontal col-sm-12">

					<div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="FirstName">First Name</label>
                                @Html.TextBoxFor( x => x.FirstName, new { @class = "form-control" } )
                                @Html.ValidationMessageFor( x => x.FirstName )
                            </div>
                            <div class="form-group">
                                <label for="LastName">Last Name</label>
                                @Html.TextBoxFor( x => x.LastName, new { @class = "form-control" } )
                                @Html.ValidationMessageFor( x => x.LastName )
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                @Html.TextBoxFor( x => x.Email, new { @class = "form-control" } )
                                @Html.ValidationMessageFor( x => x.Email )
                            </div>
                            <div class="form-group">
                                <label for="IsActive">Is Active</label>
                                @Html.CheckBoxFor( x => x.IsActive, true )
                                @Html.ValidationMessageFor( x => x.IsActive )
                            </div>
                        </div>
						<div class="col-sm-6">
							<div class="form-group">
								@Html.LabelFor( x => x.Roles )
								<div class="row">
									<div class="col-sm-12">
										@Html.ListBoxFor( x => x.SelectedRoles, Model.Roles, new { @class = "form-control multiselect", multiple = "multiple", size=10 } )
										<div class="row">
											<div class="col-sm-12 text-right">
												<i class="fa fa-info-circle" data-toggle="popover" data-trigger="hover" data-placement="left" data-html="true" data-content="<b>Administrator</b><ul><li>Full site access for read and update</li><li>Access to administrative functions</li></ul><b>Site Staff</b><ul><li>Full site access for read and update</li></ul><b>RMTL Developer</b><ul><li>Can Create RMTL Projects</li><li>Can transfer ownership of an owned project</li></ul><b>Rating Continuum Development  Analyst</b><ul><li>Can ...</li><li>Can ...</li></ul><b>Rating Continuum Manager</b><ul><li>Can ...</li><li>Can ...</li></ul>"></i>
											</div>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button name="Update" type="submit" class="btn btn-primary">Update</button>
				@*<button name="Delete" type="button" class="btn btn-primary" data-target="@Url.Action("DeleteAccount", "User", new { area = "Admin", userId = Model.UserId })">Delete</button>*@
				@Html.ActionLink( "Delete", "DeleteAccount", "Admin", new { id = Model.UserId }, new { @class = "btn btn-primary delete", role = "button" } )
			</div>
		}
	</div>
</div>