@using Models.Schema;
@using Models.DTO;
@using Newtonsoft.Json;
@model ClusterAnalysisTitle
@{
	var title = Model.Id > 0 ? "Editing Cluster Analysis Title" : "New Cluster Analysis Title";
	ViewBag.Title = title;
}

@Html.Partial( "~/Views/Shared/_FormHelperV1.cshtml" )

<script type="text/javascript">
	var Data = {
		//The original resource
		Source: @Html.Raw( JsonConvert.SerializeObject( Model, Formatting.None ) ),
		//Mapping used internally for the FormItem stuff
		Form: {},
		//Functions to configure FormItem stuff
		Config: {
			//Configure Save Button
			SaveButton: function (Field) {
				Field.SaveURL = "@Url.Content("~/clusteranalysistitle/save/")";
				Field.RedirectAfterSuccessURL = "@Url.Content("~/clusteranalysistitle/detail/")";
				Field.getDataToSave = function () {
					return {
						...Data.Source,
						...Data.Form.read()
					};
				}
			}
		}
	};

	$(document).ready(function () {
		FormItem.setupFormItems(Data.Form, "ClusterAnalysisTitle", Data.Config);
		Data.Form.write(Data.Source);
	});
	//
</script>


<h2>@title</h2>

<form-item data-path="ClusterAnalysisTitle.Id" data-ui="display" data-label="ID"></form-item>
<form-item data-path="ClusterAnalysisTitle.RowId" data-ui="display" data-label="RowID"></form-item>
<form-item data-path="ClusterAnalysisTitle.Name" data-ui="text" data-label="Name"></form-item>

<form-item data-path="ClusterAnalysisTitle.SaveButton" data-ui="savebutton" data-label="Save Changes" data-config="SaveButton"></form-item>