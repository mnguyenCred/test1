@using Models.Schema;
@using Models.DTO;
@using Newtonsoft.Json;
@using Newtonsoft.Json.Linq;
@model RatingContext
@{
	var title = Model.Id > 0 ? "Editing Rating Context" : "New Rating Context";
	ViewBag.Title = title;
}

@Html.Partial( "~/Views/Shared/_AJAXTools.cshtml" )
@Html.Partial( "~/Views/Shared/_FormHelperV2.cshtml", new EditFormHelperV2( Model, new JObject() {
	{ Factories.ConceptSchemeManager.ConceptScheme_Pay_Grade, JArray.FromObject( Factories.ConceptManager.GetAllConceptsForScheme( Factories.ConceptSchemeManager.ConceptScheme_Pay_Grade ).Select( m => SimpleItemHelper.GetSimpleItem( m ) ).ToList() ) },
	{ Factories.ConceptSchemeManager.ConceptScheme_TaskApplicability, JArray.FromObject( Factories.ConceptManager.GetAllConceptsForScheme( Factories.ConceptSchemeManager.ConceptScheme_TaskApplicability ).Select( m => SimpleItemHelper.GetSimpleItem( m ) ).ToList() ) },
	{ Factories.ConceptSchemeManager.ConceptScheme_TrainingGap, JArray.FromObject( Factories.ConceptManager.GetAllConceptsForScheme( Factories.ConceptSchemeManager.ConceptScheme_TrainingGap ).Select( m => SimpleItemHelper.GetSimpleItem( m ) ).ToList() ) }
} ) )

<h2>@title</h2>

<h3>Basic Info</h3>
<div class="field" data-fieldtype="SystemIdentifiers"></div>
<div class="field" data-fieldtype="Text" data-property="Note" data-label="Note"></div>
<div class="field" data-fieldtype="Select" data-property="PayGradeType" data-label="Rank (Pay Grade)" data-sourceuri="@Factories.ConceptSchemeManager.ConceptScheme_Pay_Grade"></div>
<div class="field" data-fieldtype="Select" data-property="ApplicabilityType" data-label="Task Applicability Type" data-sourceuri="@Factories.ConceptSchemeManager.ConceptScheme_TaskApplicability"></div>
<div class="field" data-fieldtype="Select" data-property="TrainingGapType" data-label="Training Gap Type" data-sourceuri="@Factories.ConceptSchemeManager.ConceptScheme_TrainingGap"></div>
<div class="field" data-fieldtype="SuggestionSingle" data-property="HasRating" data-label="Related Rating" data-searchtype="@nameof(Rating)"></div>
<div class="field" data-fieldtype="SuggestionSingle" data-property="HasBilletTitle" data-label="Related Billet Title" data-searchtype="@nameof(BilletTitle)"></div>
<div class="field" data-fieldtype="SuggestionSingle" data-property="HasWorkRole" data-label="Related Functional Area" data-searchtype="@nameof(WorkRole)"></div>
<div class="field" data-fieldtype="SuggestionSingle" data-property="HasRatingTask" data-label="Related Rating Task" data-searchtype="@nameof(RatingTask)"></div>
<div class="field" data-fieldtype="SuggestionSingle" data-property="HasCourseContext" data-label="Related Course Context" data-searchtype="@nameof(CourseContext)"></div>
<div class="field" data-fieldtype="SuggestionSingle" data-property="HasClusterAnalysis" data-label="Related Cluster Analysis" data-searchtype="@nameof(ClusterAnalysis)"></div>
<div class="field" data-fieldtype="SaveButton"></div>
