@using Models.Schema;
@using Models.Search;
@using Models.DTO;
@model RatingTask
@{
	ViewBag.Title = "Rating Task: " + Model.Description;
}

@Html.Partial( "~/Views/Shared/_DetailBasicInfo.cshtml", new DetailBasicInfoHelper( Model )
{
	TypeLabel = "Rating Task",
	Name = "Rating Task",
	PropertyList = new List<NamedString>()
	{
		new NamedString( "Description", Model.Description ),
		new NamedString( "Source", LinkHelper.GetDetailPageLink( Factories.ReferenceResourceManager.GetByRowId( Model.HasReferenceResource ), Url.Content, m => m.Name + " (" + m.PublicationDate + ")" ) ),
		new NamedString("Reference Type", LinkHelper.GetDetailPageLink( Factories.ConceptManager.GetByRowId( Model.ReferenceType ), Url.Content, m => m.Name ) )
	}
} )

@Html.Partial( "~/Views/Search/_ItemListSearch.cshtml" )
<script type="text/javascript">
	var ItemListConfigs = {
		CommonFilters: [
			{ Name: "> RatingTaskId > RatingTask", ItemIds: [ @Model.Id ] }
		],
		Searches: {
			Ratings: {
				Header: "Ratings",
				SearchType: "RatingContext",
				StyleType: "Rating",
				Fields: [
					{ Label: "Rating", RenderPath: ["HasRating|Rating", "CodedNotation|Rating"] },
					{ Label: "Rating Name", RenderPath: ["HasRating|Rating", "Name|Rating"], AsPlainText: true },
					{ Label: "Training Gap", RenderPath: ["TrainingGapType|Concept", "Name|Concept"] }
				]
			},
			BilletTitles: {
				Header: "Billet Titles",
				SearchType: "RatingContext",
				StyleType: "BilletTitle",
				Fields: [
					{ Label: "Rating", RenderPath: ["HasRating|Rating", "CodedNotation|Rating"] },
