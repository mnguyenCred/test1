@using Navy.Utilities;
@using Services;
@{
	var env = UtilityManager.GetAppKeyValue( "environment", "production" );
	var user = AccountServices.GetCurrentUser();
	var url = Request.Url.PathAndQuery.ToLower();
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="robots" content="noindex">
	<title>@ViewBag.Title - Navy RCDC RRL</title>
	@Styles.Render( "~/Content/css" )
	@Scripts.Render( "~/bundles/modernizr" )


	@*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.11.3/af-2.3.7/b-2.0.1/b-html5-2.0.1/cr-1.5.5/date-1.1.1/r-2.2.9/datatables.min.css" />

		<script type="text/javascript" src="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.11.3/af-2.3.7/b-2.0.1/b-html5-2.0.1/cr-1.5.5/date-1.1.1/r-2.2.9/datatables.min.js"></script>*@

	@Scripts.Render( "~/bundles/jquery" )
	@Scripts.Render( "~/bundles/bootstrap" )

	@RenderSection( "css", false )
	@RenderSection( "scripts", required: false )
	@*<link rel="stylesheet" type="text/css" href="~/Content/DataTables/DataTables-1.11.3/css/dataTables.bootstrap.min.css" />*@

	@*<script type="text/javascript" src="~/Content/DataTables/datatables.min.js"></script>*@
	<style>
		.navbar-right { float: right !important; margin-right: -5px; }
	</style>
</head>
<body>
	<div id="mainSiteDiv" class="defaultTheme">
		@*@Html.Partial( "~/Views/Shared/_Header.cshtml" )*@
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					@Html.ActionLink( "Navy RCDC RRL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" } )
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li>@Html.ActionLink( "Home", "Index", "Home" )</li>
					</ul>

					@if ( Request.IsAuthenticated || ( user != null && user.Id > 0 ) || env == "development" )
					{
						<ul class="nav navbar-nav">
							<li>@Html.ActionLink( "Search", "SearchV2", "Search" )</li>							
						</ul>
						<ul class="nav navbar-nav">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Upload<b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li>@Html.ActionLink( "Upload V2", "UploadV2", "Upload" )</li>
									<li>@Html.ActionLink( "Upload V1", "Index", "Upload" )</li>
								</ul>
							</li>

						</ul>
						<ul class="nav navbar-nav">
							<li>@Html.ActionLink( "Review", "ImportSummary", "Demo" )</li>
						</ul>
					}
					@if ( AccountServices.IsUserAnAdmin() )
					{
						<ul class="nav navbar-nav">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><a href="@Url.Content( "~/Admin/User/ResetPassword" )">Reset User Password</a></li>
									<li><a href="@Url.Content( "~/Admin/User/AddUser" )">Add Account</a></li>
								</ul>
							</li>

						</ul>
					}


					@Html.Partial( "_LoginPartial" )
				</div>
			</div>
		</div>
		<div class="container body-content">
			@RenderBody()
			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - Navy RCDC RRL</p>
			</footer>
		</div>
		@Html.Partial( "~/Views/Shared/_ConsoleMessage.cshtml" )
	</div>
</body>
</html>
