@using Microsoft.AspNet.Identity
@using Navy.Utilities;
@using Services
@{
	var env = UtilityManager.GetAppKeyValue( "environment", "production" );
	var user = AccountServices.GetCurrentUser();

}
@if ( Request.IsAuthenticated )
{
	using ( Html.BeginForm( "LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" } ) )
	{
		@Html.AntiForgeryToken()

		<ul class="nav navbar-nav navbar-right">
			<li>
				@Html.ActionLink( "Hello " + @AccountServices.GetCurrentUser( @User.Identity.GetUserName() ).FullName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" } )
			</li>
			<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
		</ul>
	}
}
else
{
<ul class="nav navbar-nav navbar-right">
	@if ( env == "development" )
	{
		<li>@Html.ActionLink( "Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" } )</li>
	}
	<li>@Html.ActionLink( "Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" } )</li>
</ul>
}
